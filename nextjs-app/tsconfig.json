{
	"compilerOptions": {
		"target": "es5",
		"baseUrl": ".",
		"paths": {
			// Path: set path alias - declare how TypeScript should resolve an import in your require/imports.
			"@components/*": ["src/common/components/*"],
			"@styles/*": ["src/common/styles/*"],
			"@modules/*": ["src/modules/*"],
			"@public/*": ["public/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowJs": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
